# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your.email@gmail.com
SMTP_PASS=your_app_password_here

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM=noreply@yourdomain.com

# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=mail.yourdomain.com
MAILGUN_FROM=mail@yourdomain.com
MAILGUN_USER=your_mailgun_user_here

# Set to any value to use environment variables
USE_ENV_VARS=true

# Set to true during development to use mock email transport instead of sending real emails
USE_MOCK_TRANSPORT=false

# For Vercel deployments
# Set VERCEL=1 in your Vercel project settings 